@model OOADteam16CK.Models.MonAn

@{
    ViewData["Title"] = "Details";
}

<h2>Chi Tiết Món</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Loại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Loai.TenLoai)
        </dd>
        <dt>
            Tên Món Ăn
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenMon)
        </dd>
        <dt>
            Đơn Giá
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia) .000 đ
        </dd>
        <dt>
            Hinh
        </dt>
        <div style="width:auto;height:210px; ">
            @foreach (var item in ViewBag.arr)
            {
                if (item != "")
                {
                    <img style="width:220px;height:200px;float:left; padding:5px;" src="~/images/@item" class="img-thumbnail" alt="Cinque Terre" />

                }
            }
        </div>
        <dt>
           Mô Tả
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt>
           Giảm Giá
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GiamGia)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MonAnID"class="btn btn-danger" >Chỉnh Sửa</a> |
    <a asp-action="Index"class="btn btn-danger">Trở Về</a>
</div>
